{
  "name": "@goatui/components",
  "version": "0.9.6",
  "description": "A light weight web component library",
  "keywords": [
    "goatui",
    "stenciljs",
    "web components"
  ],
  "homepage": "https://goatui.com",
  "bugs": {
    "url": "https://github.com/goatui/components/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goatui/components.git"
  },
  "license": "MIT",
  "author": "Shivaji Varma <contact@shivajivarma.com>",
  "contributors": [],
  "main": "dist/index.cjs.js",
  "unpkg": "dist/goatui/goatui.esm.js",
  "module": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs --prod",
    "build:full": "npm run build:theme && npm run release-to-docs && npm run build",
    "build:theme": "gulp themeBuild",
    "generate": "stencil generate",
    "release": "npm version patch",
    "release-to-docs": "stencil docs && gulp releaseToDocs",
    "start": "concurrently --kill-others \"npm run start:watch\" \"npm run start:docs-server\"",
    "start:docs-server": "cd docs && serve.cmd",
    "start:watch": "stencil build --dev --watch --serve --cors",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll"
  },
  "devDependencies": {
    "@stencil/core": "^2.14.0",
    "@stencil/sass": "^1.5.2",
    "@types/node": "^16.9.6",
    "concurrently": "^6.2.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "sass": "^1.49.11",
    "workbox-build": "^4.3.1"
  },
  "engines": {
    "node": ">=14.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs"
}
