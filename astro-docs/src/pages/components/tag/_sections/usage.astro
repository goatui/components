---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<HighlighterCard lang={'html'}>

  <div class='component-container'>
    <goat-tag>Gray</goat-tag>
    <goat-tag color='blue'>Blue</goat-tag>
    <goat-tag color='red'>Red</goat-tag>
    <goat-tag
      color='green'
      image-src='/assets/img/avatar.webp'
    >
      Green
    </goat-tag>
    <goat-tag color='yellow'>Yellow</goat-tag>
  </div>

  <div class='component-container'>
    <goat-tag size='sm'>Gray</goat-tag>
    <goat-tag color='blue' size='sm'>Blue</goat-tag>
    <goat-tag color='red' size='sm'>Red</goat-tag>
    <goat-tag color='green' size='sm' dismissible>Green</goat-tag>
    <goat-tag color='yellow' size='sm' dismissible>Yellow</goat-tag>
  </div>
</HighlighterCard>
