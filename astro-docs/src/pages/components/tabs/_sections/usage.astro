---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<style is:inline>
  .demo-canvas .demo-area {
    height: 25rem;
  }
</style>
<HighlighterCard lang={'html'} cssClasses='demo-canvas'>
<goat-tabs>
  <goat-tabs-list>
    <goat-tab>First tab</goat-tab>
    <goat-tab selected="true">Second tab</goat-tab>
    <goat-tab disabled>Disabled tab</goat-tab>
    <goat-tab href='https://shivajivarma.com'>External link</goat-tab>
  </goat-tabs-list>

  <goat-tab-panel>
    <goat-text type="heading"> First content </goat-text>
  </goat-tab-panel>

  <goat-tab-panel>
    <goat-text type="heading"> Second content </goat-text>
  </goat-tab-panel>
</goat-tabs>
</HighlighterCard>
