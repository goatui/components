---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<goat-text type='body'>Here are different types of inputs.</goat-text>

<HighlighterCard lang={'html'} cssClasses='demo-input'>
  <goat-input type='text'
              required
              clearable
              label='Text input label'
              helper-text='Optional help text'
              placeholder='Optional placeholder text'
  ></goat-input>

  <br/>

  <goat-input type='password'
              label='Password'
              helper-text='Optional help text'
              placeholder='Optional placeholder text'></goat-input>

  <br/>

  <goat-input type='text'
              skeleton
              required
              clearable
              label='Text input label'
              helper-text=''
              placeholder='Optional placeholder text'
  ></goat-input>

</HighlighterCard>
