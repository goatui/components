---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import NotificationContent from './notification-content.astro';
---
<HighlighterCard lang={'html'} cssClasses='notification-container'>
  <goat-notification>
    <NotificationContent />
  </goat-notification>
  <goat-notification state='success'>
    <NotificationContent />
  </goat-notification>
  <goat-notification state='warning'>
    <NotificationContent />
  </goat-notification>
  <goat-notification state='error'>
    <NotificationContent />
  </goat-notification>
</HighlighterCard>
