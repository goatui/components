---
import Highlighter from '../../../../components/Highlighter.astro';
---
<goat-card>
  <goat-card-content>
    <goat-select id="multi-select" value="new,save" multiple placeholder="Search" search="contains" clearable style="width: 30rem"></goat-select>
    <script is:inline>
      const $multiSelect = document.getElementById('multi-select');
      $multiSelect.items = [
        { label: 'New', value: 'new', icon: 'add' },
        { label: 'Save', value: 'save', icon: 'save' },
        { label: 'Save As', value: 'save-as', icon: 'save--series' },
        {
          label: 'Nadine Brooks',
          value: 'nadine',
          icon: 'pin',
        },
        {
          label: 'Laura Ballard',
          value: 'laura',
          icon: 'calculator',
        },
      ];
      $multiSelect.addEventListener('goat:change', function (evt) {
        myConsole.log(JSON.stringify(evt.detail, null, 4));
      });
    </script>
  </goat-card-content>
  <goat-card-content class='no-padding'>
    <Highlighter lang={'html'}>
<goat-select
  id="multi-selected"
  value="new,save"
  multiple
  placeholder="Search"
  search="contains"
  clearable
  style="width: 20rem"
></goat-select>
    </Highlighter>
  </goat-card-content>
</goat-card>
