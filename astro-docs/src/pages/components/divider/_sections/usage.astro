---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---

<goat-text type='body'>Here are several predefined checkbox styles, each serving its own semantic purpose.</goat-text>
<style is:inline>
  .container-horizontal {
    display: inline-block;
    margin-right: 1rem;
    padding: 1rem;
    width: 200px;
    border: 1px solid var(--border-color);
  }
</style>

<HighlighterCard lang={'html'}>
  <div class='container-horizontal'>
    <goat-text>Content A</goat-text>
    <goat-divider></goat-divider>
    <goat-text>Content B</goat-text>
  </div>

  <div class='container-horizontal'>
    <goat-text>Content A</goat-text>
    <goat-divider> or</goat-divider>
    <goat-text>Content B</goat-text>
  </div>
</HighlighterCard>

<style is:inline>
  .container-vertical {
    display: flex;
    height: 150px;
    margin-bottom: 1rem;
    padding: 1rem;
    width: 250px;
    border: 1px solid var(--border-color);
  }

  .container-vertical goat-text {
    display: flex;
    align-items: center;
  }
</style>

<HighlighterCard lang={'html'}>
  <div class='container-vertical'>
    <goat-text>Content A</goat-text>
    <goat-divider vertical></goat-divider>
    <goat-text>Content B</goat-text>
  </div>

  <div class='container-vertical'>
    <goat-text>Content A</goat-text>
    <goat-divider vertical> or</goat-divider>
    <goat-text>Content B</goat-text>
  </div>
</HighlighterCard>
