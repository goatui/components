---
import Highlighter from '../../../../components/Highlighter.astro'
---
<goat-card>
  <goat-card-content>
    <goat-checkbox id='disableEditor'>Disable editor</goat-checkbox>

    <goat-code-editor id='business-rule-editor' style='display:block; height: 300px'></goat-code-editor>
    <script is:inline>
      document.getElementById('business-rule-editor').value = `/**
* Sample Code
*/
function myBusinessRuleFunction(){
  const a = 1;
  const b = 2;
  let c = a + b;
  console.log(c);
}`;

      document.querySelector('#disableEditor').addEventListener('goat:change', function(evt) {
        document.getElementById('business-rule-editor').disabled = evt.target.value;
      });
    </script>
  </goat-card-content>
  <goat-card-content class='no-padding'>
    <Highlighter lang={'html'}>
      <goat-code-editor id='business-rule-editor' style='height: 300px'></goat-code-editor>
    </Highlighter>
  </goat-card-content>
  <goat-card-content class='no-padding'>
    <Highlighter lang={'javascript'} is:raw> document.getElementById('business-rule-editor').value = `/**
      * Sample Code
      */
      function myBusinessRuleFunction(){
        const a = 1;
        const b = 2;
        let c = a + b;
        console.log(c);
      }`;
    </Highlighter>
  </goat-card-content>
</goat-card>
