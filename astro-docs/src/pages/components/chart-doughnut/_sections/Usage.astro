---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---

<HighlighterCard lang={'html'}>
  <goat-button id='randomize'>Randomize</goat-button>
  <br />

  <goat-chart-doughnut width='500' height='500' margin='20'></goat-chart-doughnut>


  <script is:inline>
    const chart = document.querySelector('goat-chart-doughnut');
    chart.data = [
      { label: 'A', value: 10 },
      { label: 'B', value: 20 },
      { label: 'C', value: 30 },
      { label: 'D', value: 40 },
      { label: 'E', value: 50 },
    ];

    document.querySelector('#randomize').addEventListener('click', () => {
      chart.data = chart.data.map(d => ({ ...d, value: Math.random() * 100 }));
    });
  </script>
</HighlighterCard>
