---
import Highlighter from '../../../../components/Highlighter.astro';
---
<goat-text type='body'>On input change a <b>CustomEvent</b> <code class='highlighter-rouge'
                                                                  data-lang='html'>goat-input--change</code> is triggered by
  the element.
</goat-text>

<goat-card>
  <goat-card-content>
    <goat-input variant='default' id='name-input-field' placeholder='Type here'></goat-input>

    <script is:inline>
      document.querySelector('#name-input-field').addEventListener('goat-input--input', function(event) {
        myConsole.log('goat-input--input :: ' + event.target.value);
      });
      document.querySelector('#name-input-field').addEventListener('goat-input--change', function(event) {
        myConsole.warn('goat-input--change :: ' + event.target.value);
      });
    </script>
  </goat-card-content>
  <goat-card-content class='no-padding'>
    <Highlighter lang={'javascript'} is:raw>
      document.querySelector('#name-input-field').addEventListener('goat-input--input', function (event) {
        myConsole.log('goat-input--input :: ' + event.target.value);
      });

      document.querySelector('#name-input-field').addEventListener('goat-input--change', function (event) {
        myConsole.warn('goat-input--change :: ' + event.target.value);
      });
    </Highlighter>
  </goat-card-content>
</goat-card>
