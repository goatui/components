---
import Highlighter from '../../../../components/Highlighter.astro';
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import HeaderContent from './header-content.astro';
---

<goat-card>
  <goat-card-content class='demo'>

    <goat-header color='primary'>
      <div slot='left'>
        <goat-header-action icon='menu' href='#'></goat-header-action>
        <goat-header-brand logo='/assets/img/logo.svg' href='#' name='Goat' sub-title='Subtitle'></goat-header-brand>
      </div>

      <HeaderContent />
    </goat-header>

    <br />

    <goat-header color='success' style='--goat-header-height: 5rem'>
      <div slot='left'>
        <goat-header-action icon='menu' href='#'></goat-header-action>
        <goat-header-brand logo='/assets/img/logo.svg' href='#' name='Goat' sub-title='Custom height'></goat-header-brand>
      </div>
      <HeaderContent />
    </goat-header>

    <br />

    <goat-header float color='white'>
      <div slot='left'>
        <goat-header-action icon='menu' href='#'></goat-header-action>
        <goat-header-brand logo="/assets/img/logo.svg" href='#' name='Goat'
                           sub-title='Floating'></goat-header-brand>
      </div>

      <HeaderContent />
    </goat-header>

  </goat-card-content>
  <goat-card-content class='no-padding'>
    <Highlighter lang={'html'}>
      <goat-header color='primary'>
        <HeaderContent />
      </goat-header>
    </Highlighter>
  </goat-card-content>
</goat-card>
