---
import Layout from '../../layouts/Default.astro';
const allPosts = await Astro.glob('./posts/*.astro');
import '../../styles/blog.scss';
import site from '../../_data/site.json';
---
<Layout>
  <div class='main-content'>
    <goat-container class='blog-posts page-container'>
      <goat-text type='heading' heading-size='7'>Blog</goat-text>
      <goat-text expressive>News and announcements for all things GOATUI, including new releases</goat-text>

      <goat-divider></goat-divider>

      <div class='post-list'>
        {allPosts.map(async (post: any) => {
          return (
            <div class='item'>
              <goat-text type='heading' heading-size='4'>
                <goat-link href={`${post.url}`} title='{{ post.title }}'>{post.title}</goat-link>
              </goat-text>
              <goat-text expressive>{post.description}</goat-text>
              <goat-text color='secondary'>
                Posted on {post.publishedDate}
              </goat-text>
            </div>);
        })}

      </div>
    </goat-container>
    <goat-container>
      <div class='footer container'>
        <goat-divider></goat-divider>
        <div class='footer-content'>
          <goat-text type='legal' expressive>
            &copy; {new Date().getFullYear()} <goat-link href={site.author_url}>{site.author}</goat-link>. All Rights Reserved.
          </goat-text>
        </div>
      </div>
    </goat-container>
  </div>
</Layout>
